{
    "name": "billing-service",
    "version": "1.0.0",
    "description": "FairGo Billing Service - Subscription and payment management microservice",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "type-check": "tsc --noEmit",
        "migrate": "prisma migrate dev",
        "generate": "prisma generate",
        "studio": "prisma studio"
    },
    "keywords": [
        "billing",
        "stripe",
        "subscription",
        "saas"
    ],
    "author": "FairGo Team",
    "license": "UNLICENSED",
    "dependencies": {
        "@prisma/client": "^5.0.0",
        "cors": "^2.8.5",
        "express": "^4.18.0",
        "helmet": "^7.0.0",
        "ioredis": "^5.3.0",
        "joi": "^17.0.0",
        "nodemailer": "^6.9.0",
        "stripe": "^14.0.0",
        "winston": "^3.8.0",
        "express-rate-limit": "^7.0.0",
        "compression": "^1.7.4"
    },
    "devDependencies": {
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.0",
        "@types/express": "^4.17.0",
        "@types/jest": "^29.0.0",
        "@types/node": "^20.0.0",
        "@types/nodemailer": "^6.4.0",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "jest": "^29.0.0",
        "prisma": "^5.0.0",
        "supertest": "^6.0.0",
        "ts-jest": "^29.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "prisma": {
        "schema": "prisma/schema.prisma"
    }
}