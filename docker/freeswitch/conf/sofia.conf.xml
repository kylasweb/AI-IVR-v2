<?xml version="1.0" encoding="UTF-8"?>
<!-- FairGo FreeSWITCH SIP Profile Configuration -->

<configuration name="sofia.conf" description="sofia Endpoint">
  <global_settings>
    <param name="log-level" value="0"/>
    <param name="debug-presence" value="0"/>
  </global_settings>

  <profiles>
    <profile name="fairgo-external">
      <gateways>
        <!-- Jio SIP Trunk Configuration -->
        <!-- This will be configured with actual Jio credentials -->
        <gateway name="jio-trunk-1">
          <param name="username" value="${JIO_SIP_USERNAME}"/>
          <param name="password" value="${JIO_SIP_PASSWORD}"/>
          <param name="proxy" value="${JIO_SIP_HOST}"/>
          <param name="register" value="true"/>
          <param name="retry-seconds" value="30"/>
          <param name="ping" value="25"/>
        </gateway>
      </gateways>

      <domains>
        <domain name="fairgo.local" alias="false" parse="false"/>
      </domains>

      <settings>
        <param name="debug" value="0"/>
        <param name="sip-trace" value="no"/>
        <param name="sip-capture" value="no"/>
        <param name="watchdog-enabled" value="no"/>
        <param name="watchdog-step-timeout" value="30000"/>
        <param name="watchdog-app-name" value="sofia"/>
        <param name="watchdog-app-args" value="profile=fairgo-external"/>
        <param name="log-auth-failures" value="false"/>
        <param name="forward-unsolicited-mwi-notify" value="false"/>
        <param name="context" value="public"/>
        <param name="rfc2833-pt" value="101"/>
        <param name="sip-port" value="5060"/>
        <param name="dialplan" value="XML"/>
        <param name="dtmf-duration" value="100"/>
        <param name="inbound-codec-prefs" value="PCMA,PCMU"/>
        <param name="outbound-codec-prefs" value="PCMA,PCMU"/>
        <param name="inbound-codec-negotiation" value="generous"/>
        <param name="disable-transcoding" value="true"/>
        <param name="rtp-timer-name" value="soft"/>
        <param name="rtp-ip" value="$${local_ip_v4}"/>
        <param name="sip-ip" value="$${local_ip_v4}"/>
        <param name="ext-rtp-ip" value="auto-nat"/>
        <param name="ext-sip-ip" value="auto-nat"/>
        <param name="rtp-timeout-sec" value="300"/>
        <param name="rtp-hold-timeout-sec" value="1800"/>
        <param name="max-proceeding" value="1000"/>
        <param name="inbound-late-negotiation" value="true"/>
        <param name="inbound-zrtp-passthru" value="true"/>
        <param name="nonce-ttl" value="60"/>
        <param name="auth-calls" value="true"/>
        <param name="auth-all-packets" value="false"/>
        <param name="extensibleremote_time_limit" value="60"/>
      </settings>
    </profile>
  </profiles>
</configuration>